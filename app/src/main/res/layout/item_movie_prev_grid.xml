<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:transitionName="movie_poster"
            android:id="@+id/ivMoviePosterIMPG"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tvMovieNameIMPG"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rbMovieRateIMPG"
            android:numStars="5"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="10dp"
            app:mrb_progressTint="@android:color/holo_red_light"
            app:mrb_indeterminateTint="@android:color/holo_red_light"
            app:mrb_secondaryProgressTint="@android:color/holo_red_light"
            app:mrb_progressBackgroundTint="@android:color/holo_red_light"
            android:isIndicator="true"
            android:layout_gravity="center"
            style="@style/Widget.MaterialRatingBar.RatingBar" />
        <TextView
            android:id="@+id/tvMovieRateIMPG"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light" />
    </LinearLayout>

</android.support.v7.widget.CardView>